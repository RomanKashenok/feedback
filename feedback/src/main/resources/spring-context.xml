<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="userDao" class="info.freeit.repository.UserDaoInternal">
        <constructor-arg value="User Internal DAO"/>
    </bean>

    <bean id="userServiceFactory" class="info.freeit.service.UserServiceFactory" />

    <bean id="userService"
          factory-bean="userServiceFactory"
          factory-method="instance">
        <constructor-arg ref="userDao" />
    </bean>

    <bean id="usermanager" class="info.freeit.service.UserManager">
        <property name="us" ref="userService"/>
    </bean>


</beans>